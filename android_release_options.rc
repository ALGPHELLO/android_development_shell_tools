function romautorelease-debug-enable()  { export ANDROID_DEVELOPMENT_SHELL_TOOLS_AUTORELEASE_DEBUG='true'; }
function romautorelease-debug-disable() { export ANDROID_DEVELOPMENT_SHELL_TOOLS_AUTORELEASE_DEBUG=; }
function romautorelease-debug-active()  { [ ! -z "${ANDROID_DEVELOPMENT_SHELL_TOOLS_AUTORELEASE_DEBUG}" ]; }

