# === AOSP Sony Patcher ===
function aospsonypatcher()
{
  # Use the androidprojectpatcher helper
  androidprojectpatcher 'aosp_development_sonyaosp' 'aosp_sonyaosp' '
    build
    external/toybox
    packages/apps/Music
    system/core
    system/vold
    ' "${*}";
}

# === AOSP Sony Rebaser ===
function aospsonyrebaser()
{
  # Use the androidprojectrebaser helper
  androidprojectrebaser 'sodp' '' '
    device/sony/common::::master
    device/sony/common-init::::master
    device/sony/common-headers::::aosp/LA.UM.5.5.r1
    device/sony/common-kernel::::aosp/LA.UM.5.5.r1
    device/sony/dora::::master
    device/sony/tone::::master
    kernel/sony/msm::::aosp/LA.UM.5.5.r1
    vendor/qcom/prebuilt::::master
    vendor/sony::::master
    ' "${*}";
}
