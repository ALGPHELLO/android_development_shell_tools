# === Ninja Disabler ===
function noninja()
{
  # Usage
  if [ -z "${1}" ]; then
    echo '';
    echo ' Usage: noninja <command...> (Run command without ninja)';
    echo '';
    return;
  fi;

  # Run command without ninja
  export USE_NINJA=false;
  export USE_SOONG_UI=false;
  "${@}";
  export USE_NINJA=;
  export USE_SOONG_UI=;
}

# === Build Without Ninja ===
function mmo()
{
  # Usage
  if [ -z "${1}" ]; then
    echo '';
    echo ' Usage: mmo <command...> (Build module without ninja)';
    echo '';
    return;
  fi;

  # Build module without ninja
  export USE_NINJA=false;
  mmm "${@}";
